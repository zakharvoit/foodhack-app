<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>
        <variable
            name="viewModel"
            type="zakharvoit.com.foodhackapp.recipedetail.RecipeDetailViewModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.Guideline
            android:id="@+id/half_screen_guideline"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="270dp"
            app:layout_constraintTop_toTopOf="parent"
            app:detailImageView="@{viewModel.recipeInfo.imageUrl}"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/gradient"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/recipe_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@{viewModel.recipeInfo.title}"
            android:theme="@style/TextBigLabelTheme"
            />
        
        <TextView
            android:id="@+id/detail_calories_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{viewModel.calories}"
            app:layout_constraintTop_toBottomOf="@id/half_screen_guideline"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/detail_fat_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{viewModel.fat}"
            app:layout_constraintTop_toBottomOf="@id/half_screen_guideline"
            app:layout_constraintStart_toEndOf="@id/detail_calories_text_view"
            />

        <TextView
            android:id="@+id/detail_carb_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{viewModel.carb}"
            app:layout_constraintTop_toBottomOf="@id/half_screen_guideline"
            app:layout_constraintStart_toEndOf="@id/detail_fat_text_view"
            />

        <TextView
            android:id="@+id/detail_protein_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{viewModel.protein}"
            app:layout_constraintTop_toBottomOf="@id/half_screen_guideline"
            app:layout_constraintStart_toEndOf="@id/detail_carb_text_view"
            />

        </android.support.constraint.ConstraintLayout>
</layout>
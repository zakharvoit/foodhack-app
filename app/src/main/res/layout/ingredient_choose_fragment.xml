<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="zakharvoit.com.foodhackapp.ingredientchoose.IngredientChooseViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.Guideline
            android:id="@+id/button_position_guideline"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.8" />

        <android.support.constraint.Guideline
            android:id="@+id/left_button_pos_guideline"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.3"
            />

        <android.support.constraint.Guideline
            android:id="@+id/right_button_pos_guideline"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.7"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.ingredient != null ? viewModel.ingredient.title : null}"/>

        <ImageView
            android:id="@+id/ingredient_picure_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:imageDrawable="@{viewModel.ingredient == null ? null : viewModel.ingredient.image}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/button_position_guideline" />

        <Button
            android:id="@+id/show_recipes_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/get_recipe_list"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/button_position_guideline"
            app:layout_constraintStart_toEndOf="@id/left_button_pos_guideline"
            app:layout_constraintEnd_toStartOf="@id/right_button_pos_guideline"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>
</layout>
